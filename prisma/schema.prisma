generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model artikel {
  id          String    @id
  nomor       Int       @unique @default(autoincrement())
  title       String
  content     String    @db.LongText
  createdAt   DateTime  @default(now())
  id_pengguna String?
  thumbnail   String?
  dislike     Int       @default(0)
  like        Int       @default(0)
  pengguna    pengguna? @relation(fields: [id_pengguna], references: [id])

  @@index([id_pengguna], map: "artikel_id_pengguna_fkey")
}

model data_statistik {
  id           String     @id
  kategori     String     @unique
  persentase   String
  id_statistik String?
  statistik    statistik? @relation(fields: [id_statistik], references: [id])

  @@index([id_statistik], map: "data_statistik_id_statistik_fkey")
}

model galeri {
  id         String   @id
  urutan     Int      @unique @default(autoincrement())
  path       String
  uploadedAt DateTime @default(now())
  tampilkan  Boolean  @default(false)
}

model kata_sambutan {
  id      String @id
  content String @db.Text
}

model komentar {
  id          String        @id @default(uuid())
  nama        String
  isi         String
  like        Int           @default(0)
  dislike     Int           @default(0)
  subkomentar subkomentar[]
  createdAt   DateTime      @default(now())
}

model subkomentar {
  id        String   @id @default(uuid())
  nama      String
  isi       String
  like      Int      @default(0)
  dislike   Int      @default(0)
  createdAt DateTime @default(now())

  komentar    komentar? @relation(fields: [id_komentar], references: [id])
  id_komentar String?

  replyTo String
}

model pengguna {
  id       String    @id
  nomor    Int       @unique @default(autoincrement())
  username String    @unique
  password String    @unique
  artikel  artikel[]
}

model program_acara {
  id        String   @id
  judul     String   @unique
  mulai     String
  selesai   String
  startTime DateTime
}

model statistik {
  id             String           @id
  nama_statistik String           @unique
  data_statistik data_statistik[]
}

model struktur {
  id        String @id
  urutan    Int    @unique @default(autoincrement())
  nama      String @unique
  gambar    String
  deskripsi String
}
